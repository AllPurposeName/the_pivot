<h1>Your Orders</h1>
<% @orders.each_with_index do |order, index|  %>
  <h2> <%= link_to "Order ##{index+1}", order_path(order.id) %> </h2>
  <table class="table table-hover">
    <tr>
      <th>Name &nbsp; &nbsp; &nbsp;</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total Price</th>
    </tr>

    <% order.garments.each do |garment| %>
      <tr>
        <td><%= garment.name %></td>
        <td><%= garment.description %></td>
        <td><%= garment.monify %></td>
        <td><%= garment.quantity(order.id) %></td>
        <td><%= garment.monify((garment.quantity(order.id) * garment.price)) %></td>
      </tr>
    <% end %>
    <tr>
      <td> TOTAL PRICE </td>
      <td></td>
      <td></td>
      <td></td>
      <td> <%= order.total_monify %> </td>
    </tr>
  </table>


<% end %>
