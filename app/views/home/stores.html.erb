<div class="salmon-bottom">
  <h3 class="text-center">STORES</h3>
</div>
<div class="masonry-container center-block">
  <% @sellers.each do |seller| %>
    <div class="item">
      <%= link_to image_tag(seller.image_path), seller_path(slug: seller.slug) %>
      <figcaption>
        <%= link_to seller.store_name, seller_path(slug: seller.slug) %>
      </figcaption>
    </div>
  <% end %>
</div>
