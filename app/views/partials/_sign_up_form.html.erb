<%= form_for :user, url: users_path, method: :post do |f| %>
  <%= f.text_field :username, placeholder: "Username", class: "form-control form-field" %>
  <%= f.text_field :email, placeholder: "Email", class: "form-control form-field"  %>
  <%= f.text_field :full_name, placeholder: "Full Name", class: "form-control form-field"  %>
  <%= f.password_field :password, placeholder: "Password", class: "form-control form-field"  %>
  <br>
  <button type="button" class="btn btn-danger" data-dismiss="modal">cancel</button>
  <%= f.submit "sign up", class: "btn btn-success"%>
<% end %>
