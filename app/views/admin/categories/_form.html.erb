<%= form_for([:admin, @category]) do |f| %>
  <%= f.label :name, "edit name" %>
  <%= f.text_field :name %>

  <%= "Description of #{@category.name.capitalize}s:" %>
  <%= f.label :description, "edit description" %>
  <%= f.text_field :description %>

  <%= "Image_path of #{@category.name.capitalize}s:" %>
  <%= f.label :image_path, "edit image_path" %>
  <%= f.text_field :image_path %>

  <%= "Retired status of #{@category.name.capitalize}s:" %>
  <%= f.label :retired, "edit retired" %>
  <%= f.text_field :retired %>

  <%= f.submit "Submit" %>
<% end %>
