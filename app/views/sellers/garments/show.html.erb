<div id="garment-single">
  <div class="image-garment-single">
    <%= image_tag @garment.image_path %>
  </div>

  <h1 class="text-center"><%= @garment.name.capitalize %></h1>
  <h1 class="text-center"><%= @garment.monify %></h1>

  <h2 class="text-center"><%= @garment.description.capitalize %></h2>

  <h3 class="text-center" id="status"><%= @garment.availability %></h3>
  <% if @garment.retired? == false %>
    <%= button_to "add to cart", cart_items_path(id: @garment.id), class: "btn btn-long center-block btn-success" %>
  <% end %>
</div>
