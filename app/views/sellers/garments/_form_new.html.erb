<div class="container garment-form">
  <h2>Create a New Garment</h2>
  <%= form_for([:seller, @garment], role: "form") do |f| %>
    <div class="form-group">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description, "Description" %>
      <%= f.text_field :description, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= f.label :price, "Price" %>
      <%= f.text_field :price, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= f.label :image_path, "Image" %>
      <%= f.text_field :image_path, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= f.label :retired, "Retired" %>
      <%= f.text_field :retired, class: "form-control"  %>
    </div>

    <%= f.submit "Create", class: "btn btn-success" %>
  <% end %>
</div>
